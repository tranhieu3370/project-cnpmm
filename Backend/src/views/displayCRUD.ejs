<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GetCRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Firtname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Action</th>
        </tr>

        <% for(let i=0; i < datatable.length; i++) { %>
            <tr>
                <td>
                    <%= datatable[i].email %>
                </td>
                <td>
                    <%= datatable[i].firstName %>
                </td>
                <td>
                    <%= datatable[i].lastName %>
                </td>
                <td>
                    <%= datatable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%=datatable[i].id %>" class="btn-edit" type="button">Edit</a>
                    <a class="btn-delete" type="button">Delete</a>

                </td>
            </tr>
            <% } %>

    </table>
</body>

</html>